/**app.wxss**/
.flex-container{
    display: -webkit-flex; /* Safari */
    display: flex;
    display: -ms-flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
}
.flex-container-center{
    display: -webkit-flex; /* Safari */
    display: flex;
    display: -ms-flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
}
.flex-container-left{
    display: -webkit-flex; /* Safari */
    display: flex;
    display: -ms-flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: center;
}
.clearfix:after{content:"";display:block;clear:both;overflow:hidden;visibility:visible;width:0;height:0;}
/* 填写步骤相同顶部样式 */
.topInfo{
  width: 100%;
  background-color: white;
  padding: 40rpx 0;
  text-align: center;
  margin-top: 20rpx;
}
.text-auto{
  text-align: left;
  display: inline-block;
}
.topInfo image{
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}
.topInfo text{
   font-size: 30rpx;
}
.text-auto view:first-child{
  margin-bottom: 20rpx;
}

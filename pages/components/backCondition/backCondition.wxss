page{
  width: 100%;
  height: 100%;
  background-color: #f3f3f3;
}
.condition{
  width: 100%;
  background-color: white;
  margin-top: 20rpx;
  padding: 25rpx 0;
  text-align: center;
}
.green-title{
  font-size: 34rpx;
  color: #719217;
  display: block;
  text-align: center;
}
.grey-title{
  font-size: 28rpx;
  color: #777777;
  display: block;
  text-align: center;
  margin: 20rpx 0 30rpx 0;
}
.condition checkbox-group{
  text-align: left;
  display: inline-block;
}
.condition label{
  display: block;
  margin-bottom: 30rpx;
}
.condition text.ml{
  margin-left: 30rpx;
   font-size: 30rpx;
   color: #333333;
}
.condition button{
     width: 40%;
     background-color: #98bc36;
     color: white;
     font-size: 32rpx;
     margin-top: 20rpx;
}
.successMask{
  width: 100%;
  height: 100%; 
  background-color: rgba(0, 0, 0, 0.36);
  position: fixed;
  top: 0;
  left: 0;
}
.gongxi{
   width: 90%;
   text-align: center;
   position: fixed;
   left: 50%;
   margin-left: -45%;
   top: 50%;
   margin-top: -400rpx;
}
.white-bg{
  padding: 40rpx 0 80rpx 0;
  background-color: white;
}
.gongxi text.green{
  color: #84a725;
}
.success-rate{
  margin-top: 30rpx;
  display: inline-block;
  position: relative;
}
.success-rate image{
  position: absolute;
}
.success-rate image:first-child{
  left: -53rpx;
  top: 0
}
.success-rate image:last-child{
  right: -60rpx;
  bottom: 0
}
.bigFont{
  font-size:110rpx;
  display: block;
}
.gongxi .grey01{
  font-size:30rpx;color:#666;
}
.gongxi text.grey02{
  font-size:30rpx;color:#666;
}
.gongxi .warn{
  font-size: 24rpx;
  margin-top: 20rpx;
}
.gongxi .warn text:first-child{
  color: red;
}
.gongxi .warn text:last-child{
  color: #777777;
}
.btn-group{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
}
.returnBtn{
  width: 35%;
  height: 60rpx;
  line-height: 60rpx;
  color: white;
  background-color: #84a725;
  margin-top: 40rpx;
  font-size: 29rpx;
}
.sanjiao-group{
   width: 100%;
   height: 30rpx;
   overflow: hidden;
}
<view class='login-bg flex-container-center'>
   <image src='../images/jilv-bigBG02.jpg' style='width:100%;height:100%;position:absolute;top:0;left:0;z-index:-1;'/>
   <view class='login-box'>
       <text class='login-title'>雷哥网账号登录</text>
       <view class='input-kuang flex-container'>
           <image src='../images/login-usericon.png' style='width:36rpx;height:36rpx;'/>
           <input type='text' placeholder='手机号/邮箱' placeholder-style="color: #ffffff;" bindblur="yanzZhanghao"/>
       </view>
       <view class='input-kuang flex-container'>
           <image src='../images/login-passicon.png' style='width:28rpx;height:32rpx;'/>
           <input type='password' placeholder='密码' placeholder-style="color: #ffffff;" bindblur='yanzMima'/>
       </view>
       <button bindtap='loginFun'>登录</button>
       <view class='login-bottom'>
            <navigator url='../register/register' hover-class='none'>注册账号 > </navigator>
            <navigator url='../foundPassword/foundPassword' hover-class='none'>忘记密码?</navigator>
       </view>
   </view>
</view>